{
  "rootDir": ".",
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/jest.setup-once.ts"],
  "testMatch": [
    "<rootDir>/tests/**/*.ts*"
  ],
  "moduleNameMapper": {
    "~/(.*)$": "<rootDir>/src/$1"
  },
  "verbose": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts"
  ]
}
